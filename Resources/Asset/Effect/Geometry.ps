#define CHECKBOARD_COLOR float4(0.56f, 0.76f, 0.90f, 1.0f)

/******************************************************************************
**	Pixel Shader Instancing
******************************************************************************/
PS_OUTPUT PixelInstancing(VS_OUTPUT_INSTANCE _input)
{
	PS_OUTPUT output = (PS_OUTPUT)0;
	output.Color = float4(1.0f, 1.0f, 1.0f, 0.0f);
	output.Normal = _input.Normal;

	return output;
}